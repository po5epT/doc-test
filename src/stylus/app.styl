@import "variables.styl"

*
  box-sizing border-box
  font-family Avenir, Helvetica, Arial, sans-serif

body
  margin 0
  padding 0
  font-size 13px
  font-weight 400
  line-height 14px
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

::-webkit-input-placeholder
:-ms-input-placeholder
::placeholder
  color $muted

.page
  padding 38px 30px

  &__header
    margin-bottom 30px

  &__title
    margin 0 auto 0 0

  &__search
    max-width 564px

  &__documents
    margin-top 30px

.header
  display flex
  align-items center

  &__button + &__button
    margin-left 10px


.title
  font-size 22px
  font-weight 500
  line-height 24px

.search-icon
.bookmark-icon
  color $muted

.plus-icon
  color $dark-blue

.times-icon
  color $red

